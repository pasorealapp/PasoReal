{
  "name": "PasoReal Pro",
  "short_name": "PasoReal",
  "description": "Experiencia inmersiva de realidad virtual 360° con IA para fitness y exploración",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#0f172a",
  "theme_color": "#0f172a",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "categories": [
    "health",
    "fitness",
    "lifestyle",
    "entertainment",
    "travel"
  ],
  "shortcuts": [
    {
      "name": "Iniciar Ruta",
      "short_name": "Ruta",
      "description": "Comienza una nueva experiencia 360°",
      "url": "/?start=quick",
      "icons": [{ "src": "/icons/route.png", "sizes": "96x96" }]
    },
    {
      "name": "Coach IA",
      "short_name": "Coach",
      "description": "Habla con tu coach personal de IA",
      "url": "/?screen=ai",
      "icons": [{ "src": "/icons/ai.png", "sizes": "96x96" }]
    },
    {
      "name": "Estadísticas",
      "short_name": "Stats",
      "description": "Revisa tu progreso y logros",
      "url": "/?screen=stats",
      "icons": [{ "src": "/icons/stats.png", "sizes": "96x96" }]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "auto"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+pasoreal",
      "url": "/?route=%s"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "minimal-ui"
  ]
